{% trans_default_domain 'admin.products.category' %}

<div class="d-flex gap-2">

    <div class="d-flex flex-column gap-2 w-50">


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Основные настройки раздела  #}
                        {{ 'admin.form.header.main'|trans }}
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">

                <div class="d-flex">
                    <div class="w-50 mt-3">
                        {# Обложка раздела #}
                        {{ include(_self|replace({ "form.main.html.twig": "_cover.html.twig" })) }}
                    </div>
                    <div class="w-50">
                        {# Основные настройки #}
                        {{ include(_self|replace({ "form.main.html.twig": "_info.html.twig" })) }}
                    </div>
                </div>

            </div>
        </div>


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Настройки локали  #}
                        {{ 'admin.form.header.local'|trans }}
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">
                {# Настройки локали  #}
                {{ include(_self|replace({ "form.main.html.twig": "_trans.html.twig" })) }}

                {# Символьный код #}

                {{ form_row(form.info.url, { label : 'admin.form.label.url'|trans } ) }}
            </div>
        </div>
    </div>
    <div class="d-flex flex-column gap-2 w-50 ">
        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Настройки SEO информации  #}
                        {{ 'admin.form.header.seo'|trans }}
                    </h4>
                </div>
            </div>

            <div class="card-body text-start pb-0">
                {# Настройки SEO информации  #}
                {{ include(_self|replace({ "form.main.html.twig": "_seo.html.twig" })) }}
            </div>
        </div>

        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Настройки SEO информации  #}
                        Домены доступности
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0 domain-collection" id='{{ form.vars.id }}-collection'>

                {% if form.domain is not empty %}
                    <div class='d-flex gap-3 mb-3'>

                        <div class='w-100 ms-5 ps-3'>
                            {{ 'Домен '|trans }}
                            <span class='small text-muted ms-3'>
							<small>( без http:// и https:// )</small>
						</span>
                        </div>
                    </div>
                {% endif %}

                {% for item in form.domain %}
                    <div class='mb-3' id='item_{{ item.vars.id }}'>
                        {{ include(_self|replace({ "main/form.main.html.twig": "domains/form.domain.html.twig" })) }}
                    </div>
                {% else %}
                    <div class="alert alert-warning" role="alert">
                        Общая категория
                    </div>
                {% endfor %}


            </div>

            <div class="card-footer border-light bg-body d-flex justify-content-between align-items-center">

                <button type="button"
                        id="{{ form.vars.id }}-add"
                        class="btn btn-sm btn-outline-primary border-0"
                        data-prototype="{{ include(_self|replace({ "main/form.main.html.twig": "domains/prototype.domain.html.twig" }) )|e('html_attr') }}"

                        data-collection="{{ form.vars.id }}-collection"
                        data-index="{{ form.domain.count }}"
                >
						<span class="svg-icon svg-icon-2">
							<svg xmlns="http://www.w3.org/2000/svg"
                                 width="24"
                                 height="24"
                                 viewBox="0 0 24 24"
                                 fill="none">
								<rect opacity="0.5"
                                      x="11"
                                      y="18"
                                      width="12"
                                      height="2"
                                      rx="1"
                                      transform="rotate(-90 11 18)"
                                      fill="currentColor">
							</rect>
								<rect x="6" y="11" width="12" height="2" rx="1" fill="currentColor"></rect>
							</svg>
						</span>
                    Добавить еще домен
                </button>

            </div>

        </div>
    </div>


</div>







